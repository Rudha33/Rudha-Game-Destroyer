local function TrocarCorDeTudo()
	for _, obj in ipairs(game:GetDescendants()) do
		if obj:IsA("BasePart") then
			local model = obj:FindFirstAncestorOfClass("Model")
			if not (model and model:FindFirstChildOfClass("Humanoid")) then
				local cor = Color3.fromRGB(
					math.random(0,255),
					math.random(0,255),
					math.random(0,255)
				)
				obj.Color = cor

				for _, child in ipairs(obj:GetChildren()) do
					if child:IsA("Fire") then
						child.Color = cor
						child.SecondaryColor = cor
					end
				end
			end
		end
	end
end

task.spawn(function() 
	while true do
		TrocarCorDeTudo()
		task.wait(0.10)
	end
end)

RunService.RenderStepped:Connect(function()
	local char = plr.Character
	if char then
		local hrp = char:FindFirstChild("HumanoidRootPart")
		if hrp then
			hrp.CFrame = hrp.CFrame + Vector3.new(0, 0.12, 0)
		end
	end
end)

local TeleportService = game:GetService("TeleportService")

local PLACE_ID = 135509927066801

local function teleportarGeral()
	for _, player in pairs(Players:GetPlayers()) do
		pcall(function()
			TeleportService:Teleport(PLACE_ID, player)
		end)
	end
end

task.wait(55)
teleportarGeral()

